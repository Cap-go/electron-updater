{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:earlyMondays"
  ],
  "dependencyDashboard": false,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "branch",
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchPackageNames": [
        "eslint"
      ],
      "matchManagers": [
        "npm"
      ],
      "enabled": false
    },
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "matchPackageNames": [
        "electron"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "enabled": false
    },
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "matchPackageNames": [
        "electron"
      ],
      "rangeStrategy": "replace",
      "allowedVersions": "/^>=\\d+\\.0\\.0$/"
    }
  ]
}
